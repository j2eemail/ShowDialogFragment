<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/fragment_dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/fragment_dialog_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/fragment_dialog_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_dialog_title_height"
        android:background="@color/fragment_dialog_title_bg">

        <TextView
            android:id="@id/fragment_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/fragment_dialog_txt" />

        <ImageView
            android:id="@id/fragment_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fragment_dialog_margin_5"
            android:src="@mipmap/fragment_dialog_close" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/fragment_dialog_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fragment_dialog_margin_10">

        <TextView
            android:id="@id/fragment_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/fragment_dialog_txt" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/fragment_dialog_width"
        android:layout_height="@dimen/fragment_dialog_btn_height"
        android:orientation="horizontal">

        <Button
            android:id="@id/fragment_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fragment_dialog_margin_5"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn"
            android:gravity="center"
            android:text="@string/dialog_confirm"
            android:textColor="@color/fragment_dialog_txt" />

        <Button
            android:id="@id/fragment_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fragment_dialog_margin_5"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn"
            android:gravity="center"
            android:text="@string/dialog_cancel"
            android:textColor="@color/fragment_dialog_txt" />
    </LinearLayout>
</LinearLayout>
